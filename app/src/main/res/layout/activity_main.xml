<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <TextView android:text="结果显示" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="监听按钮"
        android:id="@+id/lisBtn"
        android:focusableInTouchMode="false"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/num2"
        android:layout_toLeftOf="@+id/txt"
        android:layout_toStartOf="@+id/txt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算"
        android:id="@+id/xmlBtn"
        android:onClick="xmlClick"
        android:layout_alignTop="@+id/lisBtn"
        android:layout_alignRight="@+id/num2"
        android:layout_alignEnd="@+id/num2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/num1"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/num2"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/num1"
        android:layout_alignLeft="@+id/num1"
        android:layout_alignStart="@+id/num1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="数字1:"
        android:id="@+id/textView"
        android:layout_gravity="left"
        android:layout_alignBottom="@+id/num1"
        android:layout_toLeftOf="@+id/num1"
        android:layout_toStartOf="@+id/num1"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="数字2:"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/num2"
        android:layout_toLeftOf="@+id/num2"
        android:layout_toStartOf="@+id/num2"
        android:paddingBottom="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="存数据"
        android:id="@+id/save"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lisBtn"
        android:layout_alignLeft="@+id/lisBtn"
        android:layout_alignStart="@+id/lisBtn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取数据"
        android:id="@+id/load"
        android:layout_alignBottom="@+id/save"
        android:layout_alignRight="@+id/xmlBtn"
        android:layout_alignEnd="@+id/xmlBtn" />

</RelativeLayout>
